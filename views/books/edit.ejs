<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Edit Book <%= book.title %></title>
  </head>
  <body>
    <!-- views/books/new.ejs -->
    <%- include('../partials/_navbar.ejs') %>
    <div class="card bg-light border-0 h-100">
      <div class="card-body col-sm-12">
        <h2>Edit Book <%= book.title %>!</h2>
        <form
          class="form-horizontal"
          action="/books/<%= book._id%>/update"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label class="control-label col-sm-2" for="title"
              >Book Title:</label
            >
            <div class="col-sm-8">
              <input
                class="form-control"
                type="text"
                name="title"
                id="title"
                value="<%= book.title %>"
              />
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="author">Author:</label>
            <div class="col-sm-8">
              <input
                class="form-control"
                type="text"
                name="author"
                id="author"
                value="<%= book.author %>"
              />
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="coverImage"
              >Book Cover Image:</label
            >
            <div class="col-sm-8">
              <input
                class="form-control"
                type="file"
                name="coverImage"
                id="coverImage"
                value="<%= book.coverImage %>"
              />
              <img
                src="/uploads/<%= book.coverImage %>"
                width="100"
                height="100"
              />
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="numberOfPages"
              >Number Of Pages:</label
            >
            <div class="col-sm-8">
              <input
                class="form-control"
                type="number"
                name="numberOfPages"
                id="numberOfPages"
                value="<%= book.numberOfPages %>"
              />
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="description"
              >Description:</label
            >
            <div class="col-sm-8">
              <textarea
                class="form-control"
                name="description"
                id="description"
              >
<%= book.description %></textarea
              >
            </div>
          </div>
          <button type="submit">Edit Book</button>
        </form>
      </div>
    </div>
  </body>
</html>
