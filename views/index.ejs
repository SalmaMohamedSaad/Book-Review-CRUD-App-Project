<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Books For Life</title>
  </head>
  <body>
    <h1>Welcome to Books for Life App.</h1>
    <h3>Your gate to grate books</h3>
    <%- include('./partials/_navbar.ejs') %>
    <table>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Cover Image</th>
      </tr>
      <% books.forEach(book => { %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.coverImage %></td>
      </tr>
      <% }); %>
    </table>
  </body>
</html>
