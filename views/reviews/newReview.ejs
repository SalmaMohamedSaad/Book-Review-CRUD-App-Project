<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Review Book <%= book.title %></title>
  </head>
  <body>
    <!-- views/books/new.ejs -->
    <%- include('../partials/_navbar.ejs') %>
    <div class="card bg-light border-0 h-100">
      <div class="card-body col-sm-12">
        <h2>Review <%= book.title %> Book!</h2>

        <div class="form-group">
          <label class="control-label col-sm-2" for="title">Book Title:</label>
          <div class="col-sm-8">
            <label><%= book.title %></label>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="author">Author:</label>
          <div class="col-sm-8">
            <label><%= book.author %></label>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="coverImage"
            >Book Cover Image:</label
          >
          <div class="col-sm-8">
            <img
              src="/uploads/<%= book.coverImage %>"
              width="100"
              height="100"
            />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="numberOfPages"
            >Number Of Pages:</label
          >
          <div class="col-sm-8">
            <label><%= book.numberOfPages %></label>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="description"
            >Description:</label
          >
          <div class="col-sm-8">
            <div type="number" name="description" id="description">
              <%= book.description %>
            </div>
          </div>
        </div>
        <form action="/review/<%= book._id%>/create" method="POST">
          <div class="form-group">
            <label class="control-label col-sm-2" for="title"
              >Review Title:</label
            >
            <div class="col-sm-8">
              <input class="form-control" type="text" name="title" id="title" />
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="description"
              >Your Review:</label
            >
            <div class="col-sm-8">
              <textarea
                class="form-control"
                name="description"
                id="description"
              ></textarea>
            </div>
          </div>
          <br />
          <input type="submit" value="Add Review" />
        </form>
      </div>
    </div>
  </body>
</html>
